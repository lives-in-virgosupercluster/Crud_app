<form action="/api/users" id="add_user" method="post">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" id="fullname" placeholder="Harsh Singh">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
           
            <input type="text" name="email" id="fullemail" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender-</label>
           
            <div class="radio inline">
                <label for="gender" class="text-light">Male</label>
                <input type="radio" name="gender" id="M"  value="male">
               
            </div>
            <div class="radio inline">
                <label for="gender" class="text-light">Female</label>
                <input type="radio" name="gender" id="F"  value="female">
                
            </div>
        </div>
        <div class="form-group">
            <label for="status" class="text-light">Status-</label>
           
            <div class="radio inline">
                <label for="status" class="text-light">Active</label>
                <input type="radio" name="status" id=""  value="Active">
                
            </div>
            <div class="radio inline">
                <label for="status" class="text-light">Inactive</label>
                <input type="radio" name="status" id=""  value="Inactive">
                
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">
                Save
            </button>
        </div>
    </div>
   
</form>

<%- include('include/_header'); %>
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <a href="/"><i class="fa-solid fa-user"></i>All Users</a>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dar">Update User</h2>
            <span class="text-light">Use the below form to Update the account</span>

        </div>
        <form   id="update_usr">
            <div class="new_user">
                <div class="form-group">
                    <label for="name" class="text-light">Name</label>
                    <input type="hidden" name="id" value="<%=user._id%>">
                    <input type="text" name="name" id="" placeholder="Harsh Singh" value="<%=user.name%>">
                </div>
                <div class="form-group">
                    <label for="Email" class="text-light">Email</label>
                   
                    <input type="text" name="email" id="" placeholder="example@gmail.com" value="<%=user.email%>">
                </div>
                <div class="form-group">
                    <label for="gender" class="text-light">Gender-</label>
                   
                    <div class="radio inline">
                        <label for="gender" class="text-light">Male</label>
                        <input type="radio" name="gender" id=""  value="male"
                        <%= user.gender == 'male' ? 'checked' : '' %>>
                       
                    </div>
                    <div class="radio inline">
                        <label for="gender" class="text-light">Female</label>
                        <input type="radio" name="gender" id=""  value="female" <%= user.gender == 'female' ? 'checked' : '' %>>
                        
                    </div>
                </div>
                <div class="form-group">
                    <label for="status" class="text-light">Status-</label>
                   
                    <div class="radio inline">
                        <label for="status" class="text-light">Active</label>
                        <input type="radio" name="status" id=""  value="active" <%= user.status == 'Active' ? 'checked' : '' %>>
                        
                    </div>
                    <div class="radio inline">
                        <label for="status" class="text-light">Inactive</label>
                        <input type="radio" name="status" id=""  value="inactive"  <%= user.status == 'Inactive' ? 'checked' : '' %>>
                        
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">
                        Save
                    </button>
                </div>
            </div>
           
        </form>
    </div>
</main>



<%- include('include/_footer'); %>